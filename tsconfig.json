{
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*", "src/test/**", "src/**/mocks/**"],
  "compilerOptions": {
    "declaration": true,
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  }
}
